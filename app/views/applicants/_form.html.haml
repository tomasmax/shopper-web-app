= form_for(applicant, :html=>{class:'form-horizontal', role: 'form'}) do |f|
  .form-group
    .col-md-2.col-md-offset-4
      = f.text_field :first_name, class: "form-control", placeholder: "First Name", required: 'required'
    .col-md-2
      = f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: 'required'

  .form-group
    .col-md-4.col-md-offset-4
      = f.text_field :email, class: "form-control", placeholder: "Email", required: 'required'

  .form-group
    .col-md-4.col-md-offset-4
      = f.text_field :phone, class: "form-control", placeholder: "Phone", required: 'required'

  .form-group
    .col-md-4.col-md-offset-4
      = f.select :region, Applicant::REGIONS, { prompt: "Select Region"}, {class: 'form-control', required: 'required'}

  .form-group
    .col-md-4.col-md-offset-4
      = f.select :phone_type, Applicant::PHONE_TYPES, { prompt: "Select Phone Type"}, {class: 'form-control', required: 'required'}

  .form-inline
    .col-md-4.col-md-offset-4
      = f.check_box :over_21, class: 'form-control', required: 'required'
      = f.label 'I am over 21'

  .form-group
    .col-md-offset-4.col-md-4
      =f.submit "Submit", class: 'call-to-action'